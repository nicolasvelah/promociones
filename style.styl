@import 'nib/vendor'

vendor-prefixes = o ms moz webkit official

#popup
	position fixed
	//top -100%
	left 0
	width 100%
	background rgba(0,0,0,0.6)
	height 100%
	z-index 9999
	display none
	#cerrar
		float right
		font-size 20px
		font-weight bold
		color #333
	.popup_content
		border: 2px solid #fff;
		border-radius: 10px;
		margin auto
		width 80%
		//height 70%
		margin-top 8%
		background rgba(255,255,255,1)
		padding 20px
		font-size 12px
		font-family "Trebuchet MS", Arial, Helvetica, sans-serif
		.texto_popup
			border-top 1px solid #818181
			margin 30px 0
			padding 30px 50px 
			font-family Calibri !important
			font-size 14px !important
			h3
				color #196191
				font-size 16px
				font-weight bold

.abrir_an
	top 0
	
.cerrar_an
	top -100%
	transition 1s top